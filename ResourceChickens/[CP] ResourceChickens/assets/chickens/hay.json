                    "ProduceItemIds": [
                        {
                            "ItemId": "{{ModId}}.HayEgg"
                        }
                    ],
                    "DeluxeProduceItemIds": [
                        {
                            "ItemId": "{{ModId}}.LargeHayEgg"
                        }
                    ],
