{
    "Changes": [
        // Hay Chicken
        {
            "Action": "EditData",
            "Target": "Data/FarmAnimals",
            "Entries": {
                "{{ModId}}.HayChicken": {
                    "DisplayName": "{{i18n: Chicken.HayChicken.Name}}",
                    "House": "Coop",
                    "EggItemIds": ["{{ModId}}.HayEgg", "{{ModId}}.LargeHayEgg"],
                    "IncubationTime": "{{ResourceChickenIncubationTimeChoice}}",
                    "BirthText": "{{i18n: Chicken.HayChicken.BirthText}}",
