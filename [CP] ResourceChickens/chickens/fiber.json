		{
			"Action": "EditData",
			"Target": "Data/FarmAnimals",
			"Entries": {
				"{{ModId}}.FiberChicken": {
					"DisplayName": "{{i18n: Chicken.FiberChicken.Name}}",
					"House": "Coop",
					"EggItemIds": ["{{ModId}}.FiberEgg", "{{ModId}}.LargeFiberEgg"],
					"IncubationTime": "{{Level2ChickenIncubationTime}}",
					"BirthText": "{{i18n: Chicken.FiberChicken.BirthText}}",
					"DaysToMature": "{{Level2ChickenDaysToMature}}",
					"ProduceItemIds": [
						{
							"ItemId": "{{ModId}}.FiberEgg"
						}
					],
					"DeluxeProduceItemIds": [
						{
							"ItemId": "{{ModId}}.LargeFiberEgg"
						}
					],
					"DaysToProduce": "{{Level2ChickenDaysToProduce}}",
